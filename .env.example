# ==============================================
# ACAS Backend - Environment Configuration (EXAMPLE)
# ==============================================
# Copy this file to .env and update with your values

# Server Configuration
SERVER_PORT=3001

# Database Configuration
# For PostgreSQL in Docker (Recommended)
DATABASE_NAME=acasdb
DATABASE_USERNAME=acas_user
DATABASE_PASSWORD=change_this_secure_password_123
DATABASE_PORT=5432

# For H2 in-memory (Development - uncomment to use)
# DATABASE_URL=jdbc:h2:mem:acasdb
# DATABASE_USERNAME=sa
# DATABASE_PASSWORD=
# DATABASE_DRIVER=org.h2.Driver
# DATABASE_PLATFORM=org.hibernate.dialect.H2Dialect

# For PostgreSQL External (Production)
# DATABASE_URL=jdbc:postgresql://your-db-host:5432/acasdb
# DATABASE_USERNAME=acas_user
# DATABASE_PASSWORD=your_secure_password

# For MySQL (Production)
# DATABASE_URL=jdbc:mysql://your-db-host:3306/acasdb
# DATABASE_USERNAME=acas_user
# DATABASE_PASSWORD=your_secure_password
# DATABASE_DRIVER=com.mysql.cj.jdbc.Driver
# DATABASE_PLATFORM=org.hibernate.dialect.MySQL8Dialect

# JPA Configuration
JPA_DDL_AUTO=update
JPA_SHOW_SQL=false

# JWT Configuration
# IMPORTANT: Change this secret in production!
# Generate a secure secret: openssl rand -base64 64
JWT_SECRET=your-secret-key-change-in-production-minimum-256-bits-long-please-generate-a-secure-random-key
JWT_EXPIRATION=604800000

# CORS Configuration (comma-separated for multiple origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging Configuration
LOGGING_LEVEL=INFO
APP_LOGGING_LEVEL=DEBUG
